#:kivy 2.0.0

<screen>:
    canvas:
        Color:
            rgba:1,1,1,root.alpha
        Rectangle:
            size: root.width, 5
            pos: 0, 250
        Rectangle:
            size: 5, 250
            pos: root.width/3+5, 0
    Label:
        font_size: 160
        center_x: root.width / 2
        top: root.height - 50
        text: root.day_length_today_str
        color: 254/255,89/255,29/255,root.alpha
    Label:
        font_size:40
        center_x: root.width *1/3
        top: root.height - 140
        text: root.current_time
        color: 1,1,1,root.alpha
    Label:
        font_size:40
        center_x: root.width *2/3
        top: root.height - 140
        text: root.date
        color: 1,1,1,root.alpha
    Label:
        font_size: 55
        center_x: root.width / 2
        top: root.height - 200
        text: "yesterday     ->     today     ->     tomorrow"
        color: 1,1,1,root.alpha
    Label:
        id: yest_delta
        font_size: 50
        center_x: root.width *1/3
        top: root.height - 250
        text: root.yesterday_today_delta_str
    Label:
        id:tom_delta
        font_size: 50
        center_x: root.width *2/3
        top: root.height - 250
        text: root.today_tomorrow_delta_str

    #day transitions
    Label:
        font_size: 60
        center_x: 175
        top: 220
        color: 1,1,1,root.alpha
        text:root.day_transition_1
    Label:
        font_size: 60
        center_x: 175
        top: 115
        color: 1,1,1,root.alpha
        text:root.day_transition_2
    #"tomorrow" labels
    Label:
        id: lbl_daymom_tom_1
        font_size: 30
        pos: 35, 165
        #color: 1,1,0,root.alpha
        text:'(tomorrow)'
    Label:
        id: lbl_daymom_tom_2
        font_size: 30
        pos: 35, 55
        color: 1,1,0,root.alpha
        text:'(tomorrow)'

    #year dates of interest
    Label:
        font_size: 65
        center_x:700
        top:250
        color: 1,1,1,root.alpha
        text:root.pdt_or_pst_completion_str
    Label:
        font_size: 50
        center_x:675
        top:175
        color: 1,1,1,root.alpha
        text: root.year_transition_1
    Label:
        font_size: 50
        center_x:675
        top:110
        color: 1,1,1,root.alpha
        text:root.year_transition_2
